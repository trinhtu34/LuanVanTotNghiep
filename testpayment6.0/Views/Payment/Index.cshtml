@model testpayment6._0.Models.PaymentViewModel
@{
    ViewData["Title"] = "Thanh Toán";
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="card">
            <div class="card-header">
                <h4>Tạo Giao Dịch Thanh Toán</h4>
            </div>
            <div class="card-body">
                <form asp-controller="Payment" asp-action="CreatePayment" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    @* if(@Model.OrderTableId != null){
                        <input type="hidden" name="OrderTableId" value="@Model.OrderTableId" />
                    }
                    if(@Model.CartId != null){
                        <input type="hidden" name="OrderTableId" value="@Model.OrderTableId" />
                    } *@
                    @if (Model.OrderTableId != null && Model.OrderTableId > 0)
                    {
                        <input type="hidden" name="OrderTableId" value="@Model.OrderTableId" />
                        <div class="alert alert-info mb-3">
                            <i class="fas fa-info-circle"></i>
                            <strong>Đơn hàng bàn #@Model.OrderTableId</strong>
                        </div>
                    }

                    @if (Model.CartId != null && Model.CartId > 0)
                    {
                        <input type="hidden" name="CartId" value="@Model.CartId" />
                        <div class="alert alert-success mb-3">
                            <i class="fas fa-shopping-cart"></i>
                            <strong>Giỏ hàng #@Model.CartId</strong>
                        </div>
                    }

                    <div class="form-group mb-3">
                        <label asp-for="Amount" class="control-label"></label>
                        <div class="input-group">
                            <input asp-for="Amount" class="form-control" readonly min="10000" max="100000000" placeholder="Nhập số tiền cần thanh toán" />
                            <span class="input-group-text">VNĐ</span>
                        </div>
                        <span asp-validation-for="Amount" class="text-danger"></span>
                        <small class="form-text text-muted">Số tiền từ 10.000đ đến 100.000.000đ</small>
                    </div>

                    <div class="form-group mb-4">
                        <label asp-for="Description" class="control-label"></label>
                        <textarea asp-for="Description" class="form-control" readonly rows="3" placeholder="Nhập mô tả giao dịch"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-lg w-100">
                            <i class="fas fa-credit-card"></i> Thanh Toán Qua VNPAY
                        </button>
                    </div>
                </form>
            </div>
            <div class="card-footer text-muted">
                <p class="mb-0">
                    <small>Thông tin này được bảo mật và chỉ được sử dụng cho mục đích thanh toán.</small>
                </p>
            </div>
        </div>
    </div>
</div>