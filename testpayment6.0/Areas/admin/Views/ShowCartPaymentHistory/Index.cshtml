@model testpayment6._0.Areas.admin.Models.PaymentHistoryViewModel_Cart

@{
    ViewData["Title"] = "Lịch sử thanh toán";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="mb-0">
                    <i class="fas fa-credit-card me-2"></i>
                    Lịch sử thanh toán đơn đặt món ăn
                </h2>
            </div>

            <!-- Filter Section -->
            <div class="card mb-4">
                <div class="card-body">
                    <form method="get" action="@Url.Action("Index", "ShowCartPaymentHistory")">
                        <div class="row align-items-end">
                            <div class="col-md-4">
                                <label class="form-label">Trạng thái giao dịch</label>
                                <select name="filterBySuccess" class="form-select">
                                    <option value="">Tất cả</option>
                                    <option value="true" @(Model.FilterBySuccess == true ? "selected" : "")>Thành công</option>
                                    <option value="false" @(Model.FilterBySuccess == false ? "selected" : "")>Thất bại</option>
                                </select>
                            </div>
                            <div class="col-md-2">

                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-filter me-1"></i>
                                    Lọc
                                </button>
                            </div>
                            <div class="col-md-2">
                                <a href="@Url.Action("Index", "ShowCartPaymentHistory")" class="btn btn-outline-secondary">
                                    <i class="fas fa-times me-1"></i>
                                    Xóa bộ lọc
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            @if (ViewBag.ErrorMessage != null)
            {
                <div class="alert alert-danger">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    @ViewBag.ErrorMessage
                </div>
            }

            <!-- Results Summary -->
            <div class="mb-3">
                <small class="text-muted">
                    Tìm thấy <strong>@Model.PaymentHistory.Count</strong> giao dịch
                    @if (Model.FilterBySuccess.HasValue)
                    {
                        <span class="badge bg-@(Model.FilterBySuccess.Value ? "success" : "danger") ms-2">
                            @(Model.FilterBySuccess.Value ? "Thành công" : "Thất bại")
                        </span>
                    }
                </small>
            </div>

            <!-- Payment History Table -->
            <div class="card">
                <div class="card-body">
                    @if (Model.PaymentHistory.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>ID</th>
                                        <th>Mã đơn đặt món ăn</th>
                                        <th>Số tiền</th>
                                        <th>Trạng thái</th>
                                        <th>Thời gian</th>
                                        <th>Phương thức</th>
                                        <th>Ngân hàng</th>
                                        <th>Mô tả</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var payment in Model.PaymentHistory)
                                    {
                                        <tr>
                                            <td>@payment.PaymentResultId</td>
                                            <td>
                                                <span class="badge bg-info">@payment.CartId</span>
                                            </td>
                                            <td>
                                                <strong class="text-primary">@payment.Amount.ToString("N0") VNĐ</strong>
                                            </td>
                                            <td>
                                                @if (payment.IsSuccess)
                                                {
                                                    <span class="badge bg-success">
                                                        <i class="fas fa-check-circle me-1"></i>
                                                        Thành công
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger">
                                                        <i class="fas fa-times-circle me-1"></i>
                                                        Thất bại
                                                    </span>
                                                }
                                            </td>
                                            <td>
                                                <small>
                                                    @payment.Timestamp.ToString("dd/MM/yyyy HH:mm:ss")
                                                </small>
                                            </td>
                                            <td>
                                                <span class="badge bg-secondary">@payment.PaymentMethod</span>
                                            </td>
                                            <td>
                                                <span class="badge bg-info">@payment.BankCode</span>
                                            </td>
                                            <td>
                                                <small class="text-muted">
                                                    @payment.ResponseDescription
                                                </small>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">Không có dữ liệu lịch sử thanh toán</h5>
                            <p class="text-muted">
                                @if (Model.FilterBySuccess.HasValue)
                                {
                                    <span>Thử thay đổi bộ lọc để xem thêm kết quả</span>
                                }
                                else
                                {
                                    <span>Chưa có giao dịch nào được thực hiện</span>
                                }
                            </p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap Icons CDN -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">

<style>
    .table th {
        font-weight: 600;
        font-size: 0.9rem;
    }

    .table td {
        vertical-align: middle;
    }

    .badge {
        font-size: 0.8rem;
    }

    .card {
        border: none;
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
    }

    .table-hover tbody tr:hover {
        background-color: rgba(0, 123, 255, 0.05);
    }

    .btn {
        font-size: 0.9rem;
    }

    .form-select {
        font-size: 0.9rem;
    }
</style>