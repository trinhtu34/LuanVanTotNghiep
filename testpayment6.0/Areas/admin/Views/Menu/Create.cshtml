@model testpayment6._0.Areas.admin.Models.MenuAdmin

@{
    ViewData["Title"] = "Thêm món ăn mới";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-plus-circle"></i> Thêm món ăn mới
                    </h4>
                </div>
                <div class="card-body">
                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @ViewBag.Error
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form asp-action="Create" method="post">
                        @Html.AntiForgeryToken()

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="DishId" class="form-label fw-bold">
                                        Mã món ăn <span class="text-danger">*</span>
                                    </label>
                                    <input asp-for="DishId" name="DishId" class="form-control" placeholder="Nhập mã món ăn" required />
                                    <span asp-validation-for="DishId" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="DishName" class="form-label fw-bold">
                                        Tên món ăn <span class="text-danger">*</span>
                                    </label>
                                    <input asp-for="DishName" name="DishName" class="form-control" placeholder="Nhập tên món ăn" required />
                                    <span asp-validation-for="DishName" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Price" class="form-label fw-bold">
                                        Giá tiền (VNĐ) <span class="text-danger">*</span>
                                    </label>
                                    <input asp-for="Price" name="Price" type="number" class="form-control"
                                           placeholder="Nhập giá tiền" required />
                                    <span asp-validation-for="Price" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="CategoryId" class="form-label fw-bold">
                                        Danh mục <span class="text-danger">*</span>
                                    </label>
                                    <select asp-for="CategoryId" name="CategoryId" class="form-select" required>
                                        <option value="">-- Chọn danh mục --</option>
                                        @if (ViewBag.Categories != null)
                                        {
                                            @foreach (var category in (List<testpayment6._0.Areas.admin.Models.CategoryAdmin>)ViewBag.Categories)
                                            {
                                                <option value="@category.CategoryId">@category.CategoryName</option>
                                            }
                                        }
                                    </select>
                                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="RegionId" class="form-label fw-bold">
                                        Khu vực <span class="text-danger">*</span>
                                    </label>
                                    <select asp-for="RegionId" name="RegionId" class="form-select" required>
                                        <option value="">-- Chọn khu vực --</option>
                                        @if (ViewBag.Regions != null)
                                        {
                                            @foreach (var region in (List<testpayment6._0.Areas.admin.Models.RegionAdmin>)ViewBag.Regions)
                                            {
                                                <option value="@region.RegionId">@region.RegionName</option>
                                            }
                                        }
                                    </select>
                                    <span asp-validation-for="RegionId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Descriptions" class="form-label fw-bold">Mô tả món ăn</label>
                            <textarea asp-for="Descriptions" name="Descriptions" class="form-control" rows="3"
                                      placeholder="Nhập mô tả chi tiết về món ăn (tùy chọn)"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Images" class="form-label fw-bold">URL Hình ảnh</label>
                            <input asp-for="Images" name="Images" type="url" class="form-control"
                                   placeholder="https://example.com/image.jpg (tùy chọn)" />
                            <span asp-validation-for="ImageUrl" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a href="@Url.Action("Index", "Menu")" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Quay lại
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save"></i> Lưu thông tin
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://kit.fontawesome.com/your-fontawesome-kit.js"></script>