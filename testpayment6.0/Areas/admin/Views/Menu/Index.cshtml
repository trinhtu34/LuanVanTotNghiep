@model List<testpayment6._0.Models.Menu>
@{
	ViewData["Title"] = "Quản lý thực đơn";
	Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
	<div class="row">
		<div class="col-12">
			<div class="d-flex justify-content-between align-items-center mb-3">
				<h2>Quản lý thực đơn</h2>
				<a href="@Url.Action("Create")" class="btn btn-primary">
					<i class="fas fa-plus"></i> Thêm món ăn mới
				</a>
			</div>
			@if (TempData["Success"] != null)
			{
				<div class="alert alert-success alert-dismissible fade show" role="alert">
					@TempData["Success"]
					<button type="button" class="btn-close" data-bs-dismiss="alert"></button>
				</div>
			}
			@if (ViewBag.Error != null)
			{
				<div class="alert alert-danger alert-dismissible fade show" role="alert">
					@ViewBag.Error
					<button type="button" class="btn-close" data-bs-dismiss="alert"></button>
				</div>
			}

			<div class="card">
				<div class="card-body">
					@if (Model.Any())
					{
						<div class="table-responsive">
							<table class="table table-striped table-hover">
								<thead class="table-dark">
									<tr>
										<th>ID</th>
										<th>Tên món ăn</th>
										<th>Giá</th>
										<th>Loại món ăn</th>
										<th style="width: 150px;">Thao tác</th>
									</tr>
								</thead>
								<tbody>
									@foreach (var menu in Model)
									{
										<tr>
											<td>@menu.DishId</td>
											<td>@menu.DishName</td>
											<td>@menu.Price.ToString("C", System.Globalization.CultureInfo.CurrentCulture)</td>
											<td>@menu.Category.CategoryName</td>
											<td>
												<a href="@Url.Action("Edit", new { id = menu.DishId })"
												   class="btn btn-sm btn-outline-primary" title="Sửa">
													<i class="fas fa-edit"></i>
												</a>
											</td>
										</tr>
									}
								</tbody>
							</table>
						</div>
					}
					else
					{
						<div class="text-center py-4">
							<i class="fas fa-inbox fa-3x text-muted mb-3"></i>
							<p class="text-muted">Chưa có loại món ăn nào được tạo.</p>
							<a href="@Url.Action("Create")" class="btn btn-primary">Thêm loại món ăn đầu tiên</a>
						</div>
					}
				</div>
			</div>
		</div>
	</div>
</div>