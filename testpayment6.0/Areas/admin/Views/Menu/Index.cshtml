@model List<testpayment6._0.Areas.admin.Models.MenuAdminEdit>

@{
    ViewData["Title"] = "Quản lý thực đơn";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="text-primary">Quản lý thực đơn</h2>
                <a href="@Url.Action("Create", "Menu")" class="btn btn-success">
                    <i class="fas fa-plus"></i> Thêm món ăn mới
                </a>
            </div>

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @ViewBag.Error
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (Model != null && Model.Any())
            {
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Mã món</th>
                                        <th>Tên món ăn</th>
                                        <th>Được dùng</th>
                                        <th>Giá</th>
                                        <th>Danh mục</th>
                                        <th>Khu vực</th>
                                        <th>Mô tả</th>
                                        <th class="text-center">Thao tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                <code>@item.DishId</code>
                                            </td>
                                            <td>
                                                <strong>@item.DishName</strong>
                                            </td>
                                            <td>
                                                @if (item.IsAvailable == true)
                                                {
                                                    <span class="badge bg-success">
                                                        <i class="fas fa-check"></i> Còn phục vụ
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger">
                                                        <i class="fas fa-times"></i> Hết món
                                                    </span>
                                                }
                                            </td>

                                            <td>
                                                <span class="text-success fw-bold">
                                                    @item.Price.ToString("N0") VNĐ
                                                </span>
                                            </td>
                                            <td>
                                                <span class="badge bg-info">@item.CategoryName</span>
                                            </td>
                                            <td>
                                                <span class="badge bg-secondary">@item.RegionName</span>
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(item.Descriptions))
                                                {
                                                    @(item.Descriptions.Length > 50 ? item.Descriptions.Substring(0, 50) + "..." : item.Descriptions)
                                                }
                                                else
                                                {
                                                    <em class="text-muted">Chưa có mô tả</em>
                                                }
                                            </td>
                                            <td class="text-center">
                                                <div class="btn-group" role="group">
                                                    <a href="@Url.Action("Edit", "Menu", new { id = item.DishId })"
                                                       class="btn btn-sm btn-outline-primary"
                                                       title="Chỉnh sửa món ăn">
                                                        <i class="fas fa-edit"></i> Sửa
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="card">
                    <div class="card-body text-center py-5">
                        <i class="fas fa-utensils fa-3x text-muted mb-3"></i>
                        <h4 class="text-muted">Chưa có món ăn nào</h4>
                        <p class="text-muted">Hãy thêm món ăn đầu tiên vào thực đơn của nhà hàng</p>
                        <a href="@Url.Action("Create", "Menu")" class="btn btn-primary">
                            <i class="fas fa-plus"></i> Thêm món ăn
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<script src="https://kit.fontawesome.com/your-fontawesome-kit.js"></script>