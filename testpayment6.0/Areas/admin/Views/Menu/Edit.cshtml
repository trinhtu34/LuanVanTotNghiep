@model testpayment6._0.Areas.admin.Models.MenuAdminEdit

@{
    ViewData["Title"] = "Chỉnh sửa món ăn";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-edit"></i> Chỉnh sửa món ăn
                        @if (!string.IsNullOrEmpty(Model?.DishName))
                        {
                            <span class="text-light">: @Model.DishName</span>
                        }
                    </h4>
                </div>
                <div class="card-body">
                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @ViewBag.Error
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form asp-action="Edit" method="post">
                        @Html.AntiForgeryToken()

                        <!-- Hidden field for DishId -->
                        <input asp-for="DishId" type="hidden" />

                        <div class="mb-3">
                            <label class="form-label fw-bold text-muted">Mã món ăn</label>
                            <input asp-for="DishId" name="DishId" value="@(Model?.DishId ?? "")" class="form-control bg-light" readonly />
                            <div class="form-text">Mã món ăn không thể thay đổi</div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="DishName" class="form-label fw-bold">
                                        Tên món ăn <span class="text-danger">*</span>
                                    </label>
                                    <input asp-for="DishName" name="Dishname" value="@Model?.DishName" class="form-control" placeholder="Nhập tên món ăn" required />
                                    <span asp-validation-for="DishName" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Price" class="form-label fw-bold">
                                        Giá tiền (VNĐ) <span class="text-danger">*</span>
                                    </label>
                                    <input asp-for="Price" name="Price" value="@Model?.Price" type="number" class="form-control" placeholder="Nhập giá tiền" required />
                                    <span asp-validation-for="Price" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="CategoryId" class="form-label fw-bold">
                                        Danh mục <span class="text-danger">*</span>
                                    </label>
                                    <select asp-for="CategoryId" name="CategoryId" class="form-select" required>
                                        <option value="">-- Chọn danh mục --</option>
                                        @if (ViewBag.Categories != null)
                                        {
                                            @foreach (var category in (List<testpayment6._0.Areas.admin.Models.CategoryAdmin>)ViewBag.Categories)
                                            {
                                                <option value="@category.CategoryId"
                                                        @(Model?.CategoryId == category.CategoryId ? "selected" : "")>
                                                    @category.CategoryName
                                                </option>
                                            }
                                        }
                                    </select>
                                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="RegionId" class="form-label fw-bold">
                                        Khu vực <span class="text-danger">*</span>
                                    </label>
                                    <select asp-for="RegionId" name="RegionId" class="form-select" required>
                                        <option value="">-- Chọn khu vực --</option>
                                        @if (ViewBag.Regions != null)
                                        {
                                            @foreach (var region in (List<testpayment6._0.Areas.admin.Models.RegionAdmin>)ViewBag.Regions)
                                            {
                                                <option value="@region.RegionId"
                                                        @(Model?.RegionId == region.RegionId ? "selected" : "")>
                                                    @region.RegionName
                                                </option>
                                            }
                                        }
                                    </select>
                                    <span asp-validation-for="RegionId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Descriptions" class="form-label fw-bold">Mô tả món ăn</label>
                            <textarea asp-for="Descriptions" name="Descriptions" class="form-control" rows="3"
                                      placeholder="Nhập mô tả chi tiết về món ăn (tùy chọn)">@Model?.Descriptions</textarea>
                            <span asp-validation-for="Descriptions" class="text-danger"></span>
                        </div>
                        <div class="mb-3 form-check">
                            @Html.EditorFor(m => m.IsAvailable, new { htmlAttributes = new { @class = "form-check-input" } })
                            <label asp-for="IsAvailable" class="form-check-label fw-bold">
                                Còn khả dụng (hiển thị trong thực đơn)
                            </label>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Images" class="form-label fw-bold">URL Hình ảnh</label>
                            <input asp-for="Images" name="Images" value="@Model?.Images" type="url" class="form-control"
                                   placeholder="https://example.com/image.jpg (tùy chọn)" />
                            <span asp-validation-for="Images" class="text-danger"></span>

                            @if (!string.IsNullOrEmpty(Model?.Images))
                            {
                                <div class="mt-2">
                                    <small class="text-muted">Hình ảnh hiện tại:</small>
                                    <div class="mt-1">
                                        <img src="@Model.Images" class="img-thumbnail" style="max-width: 200px; max-height: 150px;"
                                             alt="Hình ảnh món ăn" onerror="this.style.display='none'; this.nextElementSibling.style.display='block';" />
                                        <div class="text-muted small" style="display: none;">
                                            <i class="fas fa-exclamation-triangle"></i> Không thể tải hình ảnh
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a href="@Url.Action("Index", "Menu")" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Quay lại danh sách
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Cập nhật món ăn
                            </button>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://kit.fontawesome.com/your-fontawesome-kit.js"></script>