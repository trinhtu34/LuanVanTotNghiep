@model testpayment6._0.Areas.admin.Models.CartPaymentViewModel_adminPayment
@{
    ViewData["Title"] = "Thanh toán tiền mặt";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-cash-register"></i> Thanh toán tiền mặt
                    </h4>
                </div>
                <div class="card-body">
                    @if (ViewBag.Success != null)
                    {
                        if (ViewBag.Success)
                        {
                            <div class="alert alert-success">
                                <i class="fas fa-check-circle"></i>
                                <strong>Thành công!</strong> @ViewBag.Message
                                <br><small>Cart ID: @ViewBag.CartId - Số tiền: @(((decimal)ViewBag.Amount).ToString("N0")) VNĐ</small>
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-danger">
                                <i class="fas fa-exclamation-triangle"></i>
                                <strong>Lỗi!</strong> @ViewBag.Message
                            </div>
                        }
                    }

                    @if (ViewData.ModelState.ErrorCount > 0)
                    {
                        <div class="alert alert-danger">
                            <i class="fas fa-exclamation-triangle"></i>
                            <strong>Có lỗi xảy ra:</strong>
                            <ul class="mb-0 mt-2">
                                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                {
                                    <li>@error.ErrorMessage</li>
                                }
                            </ul>
                        </div>
                    }

                    <form asp-action="Index" method="post" id="paymentForm">
                        @Html.AntiForgeryToken()

                        <div class="form-group">
                            <label asp-for="CartId" class="form-label required">
                                <i class="fas fa-shopping-cart"></i> @Html.DisplayNameFor(model => model.CartId)
                            </label>
                            <input asp-for="CartId" name="CartId" type="number" class="form-control form-control-lg"
                                   placeholder="Nhập Cart ID..."
                                   min="1"
                                   id="cartIdInput" />
                            <span asp-validation-for="CartId" class="text-danger"></span>
                            <small class="form-text text-muted">
                                Cart ID phải là số nguyên dương
                            </small>
                        </div>

                        <div class="form-group">
                            <label asp-for="Amount" class="form-label required">
                                <i class="fas fa-money-bill-wave"></i> @Html.DisplayNameFor(model => model.Amount)
                            </label>
                            <div class="input-group">
                                <input asp-for="Amount" name="Amount" type="number" class="form-control form-control-lg"
                                       placeholder="Nhập số tiền..."
                                       id="amountInput" />
                                <div class="input-group-append">
                                    <span class="input-group-text">VNĐ</span>
                                </div>
                            </div>
                            <span asp-validation-for="Amount" class="text-danger"></span>
                            <small class="form-text text-muted">
                                Số tiền từ 1,000 đến 50,000,000 VNĐ
                            </small>
                        </div>

                        <div class="amount-display">
                            <div class="alert alert-info">
                                <i class="fas fa-calculator"></i>
                                <strong>Số tiền thanh toán:</strong>
                                <span id="displayAmount" class="amount-text">0 VNĐ</span>
                            </div>
                        </div>

                        <div class="form-actions">
                            <button type="submit" class="btn btn-success btn-lg btn-block" id="submitBtn">
                                <i class="fas fa-save"></i> Lưu thanh toán
                            </button>
                        </div>
                    </form>

                    <div class="mt-3">
                        <small class="text-muted">
                            <i class="fas fa-info-circle"></i>
                            Nhân viên: <strong>@ViewBag.UserId</strong> |
                            Dành cho thanh toán tiền mặt
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        border: none;
        margin-top: 30px;
    }

    .form-label.required::after {
        content: " *";
        color: red;
    }

    .form-control-lg {
        font-size: 1.25rem;
        padding: 0.75rem 1rem;
    }

    .amount-display {
        margin: 20px 0;
    }

    .amount-text {
        font-size: 1.5rem;
        font-weight: bold;
        color: #28a745;
    }

    .form-actions {
        margin-top: 30px;
    }

    .alert {
        border-left: 4px solid #17a2b8;
    }

    .alert-danger {
        border-left-color: #dc3545;
    }

    .alert-success {
        border-left-color: #28a745;
    }

    .alert-info {
        border-left-color: #17a2b8;
    }

    #amountInput:focus, #cartIdInput:focus {
        border-color: #28a745;
        box-shadow: 0 0 0 0.2rem rgba(40, 167, 69, 0.25);
    }

    .btn-block {
        width: 100%;
    }

    .input-group-text {
        background-color: #e9ecef;
        border-color: #ced4da;
    }
</style>

<script>
    $(document).ready(function() {
        // Focus vào input Cart ID
        $('#cartIdInput').focus();

        // Cập nhật hiển thị số tiền khi nhập
        $('#amountInput').on('input', function() {
            updateAmountDisplay();
        });

        // Cập nhật hiển thị ban đầu
        updateAmountDisplay();

        // Xử lý submit form
        $('#paymentForm').on('submit', function(e) {
            var cartId = $('#cartIdInput').val();
            var amount = $('#amountInput').val();

            if (!cartId || cartId < 1) {
                e.preventDefault();
                alert('Vui lòng nhập Cart ID hợp lệ');
                $('#cartIdInput').focus();
                return false;
            }

            if (!amount || amount < 1000) {
                e.preventDefault();
                alert('Vui lòng nhập số tiền hợp lệ (tối thiểu 1,000 VNĐ)');
                $('#amountInput').focus();
                return false;
            }

            // Disable submit button để tránh double-click
            $('#submitBtn').prop('disabled', true).html('<i class="fas fa-spinner fa-spin"></i> Đang xử lý...');
        });

        // Chỉ cho phép nhập số
        $('#cartIdInput, #amountInput').on('keypress', function(e) {
            if (e.which < 48 || e.which > 57) {
                if (e.which != 8 && e.which != 46 && e.which != 13) {
                    e.preventDefault();
                }
            }
        });

        // Enter để chuyển field hoặc submit
        $('#cartIdInput').keypress(function(e) {
            if (e.which === 13) {
                $('#amountInput').focus();
            }
        });

        $('#amountInput').keypress(function(e) {
            if (e.which === 13) {
                $('#paymentForm').submit();
            }
        });
    });

    function updateAmountDisplay() {
        var amount = $('#amountInput').val();
        var displayAmount = '0 VNĐ';

        if (amount && amount > 0) {
            displayAmount = parseInt(amount).toLocaleString('vi-VN') + ' VNĐ';
        }

        $('#displayAmount').text(displayAmount);
    }

    // Kiểm tra session định kỳ
    setInterval(function() {
        $.get('@Url.Action("CheckSession", "Payment")', function(data) {
            if (!data.isAuthenticated) {
                alert('Phiên đăng nhập đã hết hạn!');
                window.location.href = '@Url.Action("IndexAdminLogin", "HomeAdmin")';
            }
        });
    }, 300000); // 5 phút
</script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}